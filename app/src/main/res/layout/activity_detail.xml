<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_start"
    app:cardCornerRadius="@dimen/cardview_radius"
    tools:style="@style/CardView">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_title_view"
            android:gravity="top"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/label_title"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_author_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_author_view"
            android:gravity="top"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/label_author"
            android:textAppearance="@android:style/TextAppearance.Material"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/text_title_view"
            app:layout_constraintStart_toEndOf="@+id/text_title_view"
            app:layout_constraintTop_toBottomOf="@+id/text_title_view" />


        <TextView
            android:id="@+id/text_entry_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_entry"
            android:gravity="top"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/label_text_entry"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/text_author_view"
            app:layout_constraintTop_toBottomOf="@+id/text_author_view" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_edit_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_start"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/floating_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>